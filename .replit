run = "nix-shell build.nix" # DO NOT CHANGE
entrypoint = "index.js"

language = "nodejs"

[packager]
language = "nodejs"

[packager.features]
packageSearch = true
guessImports = true

[languages.nodejs]
pattern = "**/*.js"
syntax = "nodejs"

[languages.nodejs.languageServer]
start = [ "typescript-language-server", "--stdio" ]

[[ports]]
localPort = 3000
externalPort = 80
